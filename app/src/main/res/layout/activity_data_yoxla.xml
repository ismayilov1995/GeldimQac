<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ismayil.geldimqac.DataYoxla"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvYoxla"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/yoxlaGrid"
        android:layout_width="339dp"
        android:layout_height="339dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iV1"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV2"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV3"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV4"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV5"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV6"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV7"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV8"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/iV9"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="clicked"
            app:srcCompat="@drawable/logo1" />


    </GridLayout>

    <TextView
        android:id="@+id/tvleft"
        android:layout_width="302dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center|clip_vertical"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivScoreFinal"
        android:layout_width="339dp"
        android:layout_height="339dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/score" />

    <TextView
        android:id="@+id/tvScoreFinal"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="20"
        android:textColor="@android:color/background_light"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivScoreFinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivScoreFinal"
        app:layout_constraintVertical_bias="0.864" />

</android.support.constraint.ConstraintLayout>
